@using Modum.Models.BaseModels.Models.ProductStructure;
@using Modum.Web.Models.Models.Pagination;
@model PaginatedList<ProductSizesHelpingTable>
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    Layout = "~/Views/Shared/_WorkerLayout.cshtml";
}

<div class="manage-products">
    <div id="productTableContainer" class="pt-3">
        <div class="d-flex justify-content-center">
            <div class="display-4 py-3 text-center col">
                Products Manage Menu
            </div>
        </div>
        <div class="d-flex pt-5">
            <a class="col btn btn-purple text-white fs-5" id="hover-btn" asp-action="AddProduct">Add a product</a>
        </div>
        <div id="product-filtering" class="d-flex pt-4 pb-4 justify-content-center">
            <div class="col-12 col-lg-6">
                <form asp-action="ManageProducts" method="get">
                    <div class="form-actions no-color container">
                        <div class="h3 d-flex py-3 align-items-center justify-content-center" style="font-weight:400">
                            Find by product name:
                        </div>
                        <div class="py-1">
                            <input type="text" name="SearchString" class="form-control" value="@ViewData["CurrentFilter"]" />
                        </div>
                        <div class="py-3 row justify-content-around">
                            <input type="submit" value="Search" class="btn btn-dark col-4 search-btn" style="font-size:1.4em;" />
                            <a class="btn btn-danger col-4 clear-btn" asp-action="ManageProducts" style="font-size:1.4em;">Clear</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <table class="table table-striped">
            <thead>
                <tr class="header-row">
                    <th>Brand</th>
                    <th>Title</th>
                    <th>Size</th>
                    <th>Available Items</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Product.Brand</td>
                        <td>@item.Product.Title</td>
                        <td>@item.ProductSize</td>
                        <td>@item.AvailableItems</td>
                        <td>
                            <button class="btn btn-warning redirect-to-edit-page" id="@item.Product.Id">Edit</button>
                            <button class="btn btn-danger delete" id="@item.Id">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div id="add-a-product">
        </div>
    </div>
</div>

