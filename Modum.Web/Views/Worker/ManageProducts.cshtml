@using Modum.Models.BaseModels.Models.ProductStructure;
@using Modum.Web.Models.Models.Pagination;
@model PaginatedList<Product>
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    Layout = "~/Views/Shared/_WorkerLayout.cshtml";
}

<div class="manage-products">
    <div id="productTableContainer" class="pt-3">
        <div class="d-flex justify-content-center">
            <div class="h2">
                Products Manage Menu
            </div>
        </div>
        <div class="d-flex pt-3">
            <a class="col btn btn-success" asp-action="AddProduct" style="font-size:1.2em">Add a product</a>
        </div>
        <div id="product-filtering" class="d-flex pt-4 pb-4 justify-content-center">
            <div>
                <form asp-action="ManageProducts" method="get">
                    <div class="form-actions no-color row">
                        <div class="h5 row p-0 m-0 pr-2 align-items-center" style="font-weight:400">
                            Find by product name:
                        </div>
                        <div class="">
                            <input type="text" name="SearchString" class="form-control" value="@ViewData["CurrentFilter"]" />
                        </div>
                        <div class="pl-3">
                            <input type="submit" value="Search" class="btn btn-dark" /> |
                            <a class="btn btn-danger" asp-action="ManageProducts">Clear</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <table class="table table-striped" border="1">
            <thead>
                <tr class="header-row">
                    <th>Brand</th>
                    <th>Title</th>
                    <th>Size</th>
                    <th>Available Items</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    @foreach (var size in item.ProductSizes)
                    {
                        <tr>
                            <td>@item.Brand</td>
                            <td>@item.Title</td>
                            <td>@size.ProductSize</td>
                            <td>@size.AvailableItems</td>
                            <td>
                                <button class="btn btn-warning redirect-to-edit-page" id="@item.Id">Edit</button>
                                <button class="btn btn-danger delete" id="@item.Id">Delete</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        <div id="add-a-product">
        </div>
    </div>

</div>

