@using Modum.Models.BaseModels.Models.BaseStructure;
@model IEnumerable<MainCategory>

@{
    SelectList mainCategoryList = ViewBag.MainCategoryList;
    Layout = "~/Views/Shared/_WorkerLayout.cshtml";
}

@section Styles {
    <link href="@Url.Content("~/css/custom/ManageSubSelection.css")" rel="stylesheet" type="text/css" />
}
<div class="manage-sub-selections">
    <div class="justify-content-center d-flex">
        <div class="display-4 py-3 text-center col">
            Manage Categories
        </div>
    </div>
    <br />
    <br />
    <div class="row justify-content-center align-items-center pb-3 ">
        <label class="h4">Select a Main Category to edit</label>
    </div>

    <div class="row mb-4 justify-content-center align-items-center">
        <div class="col-md-4">
            @Html.DropDownList("SelectedMainCategory", mainCategoryList, "-- Select existing main category --",
            new { @class = "form-control", id = "selectMainCategoryDropdownId", style="font-size:1.2em !important;" })
        </div>
    </div>

    <div class="" id="mainCategoryTable" style="display: none;">
        <div class="table-responsive">
            <table class="table category-table">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Subcategories</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="category-tbody">
                </tbody>
            </table>
        </div>
        <div class="pl-2 pb-2">
            <button type="button" class="btn btn-primary" id="add-category-row-btn"><i class="fas fa-plus"></i> Add Category</button>
        </div>
    </div>
    <div class="d-flex pt-5  justify-content-center" id="save-btn-div-row">
        <button id="save-btn" style="display:none; font-size:1.5em !important" class="btn btn-success text-white col-10">Save all changes</button>
    </div>
</div>
