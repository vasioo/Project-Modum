<div class="outfit-picker-page">
    <div class="container custom-container-for-picker py-5">
        <form class="py-4">

            <div class="row h2 py-3 align-items-center justify-content-center">Outfit Picker Deep Learning Try-On</div>

            <div class="row justify-content-around pt-4">
                <div class="col-10 col-lg-5 col-xl-4 p-0 m-0 py-3">
                    <label class="form-label col text-center h3" for="person-image">Person Image</label>
                    <div class="upload-input">
                        <input type="file" id="person-image" name="person-image" class="image-upload" accept=".png, .jpg, .jpeg" multiple="multiple" max="1">
                        <img class="uploaded-image" id="person-image-img">
                        <label for="person-image" class="text-center content">
                            <span class="text">
                                <span class="mb-15 plus-icon"><i class="fa fa-plus"></i></span>
                            </span>
                        </label>
                    </div>
                </div>
                <div class="col-10 col-lg-5 col-xl-4 p-0 m-0 py-3">
                    <label class="form-label col text-center h3" for="clothing-image">Clothing Item Image</label>
                    <div class="upload-input">
                        <input type="file" id="clothing-image" name="clothing-image" class="image-upload" accept=".png, .jpg, .jpeg" multiple="multiple" max="1">
                        <img class="uploaded-image" id="clothing-item-image-img">
                        <label for="clothing-image" class="text-center content">
                            <span class="text">
                                <span class="mb-15 plus-icon"><i class="fa fa-plus"></i></span>
                            </span>
                        </label>
                    </div>
                </div>
            </div>
            <div id="hiddenInput" style="display:none">
                <div class="row pt-5 justify-content-center">
                    <div class="col-10 col-lg-5 col-xl-4 p-0 m-0">
                        <label class="form-label col text-center h3" for="result-image">Result Image</label>
                        <div class="upload-input">
                            <input type="file" id="result-image" name="result-image" class="image-upload" accept=".png, .jpg, .jpeg" multiple="multiple" max="1">
                            <img class="" id="additionalPicturePreview">
                        </div>
                    </div>
                </div>
                <div class="form-group pt-3">
                    <label id="resultText" class="h4"></label>
                </div>
            </div>
            <div class="row pt-4 justify-content-center">
                <button class="btn-submit btn-success col-10 h4 p-2 rounded create-image">Calculate</button>
            </div>
            <div class="row pt-4 justify-content-center" style="display:none">
                <button class="btn-submit btn-danger col-10  h4 p-2 rounded retry-btn">Retry</button>
            </div>
        </form>
    </div>
</div>
