                            <pre>
                            <code class="html">
                                // Copy and paste this code into your HTML
                                &lt;div id="modumAdsContainer1"&gt;&lt;/div&gt;

                                &lt;script&gt;
                                    fetch('https://modum.azurewebsites.net/api/ads/mostAddedToFav')
                                        .then(response =&gt; response.text())
                                        .then(htmlString =&gt; {
                                            const container = document.getElementById('modumAdsContainer1');
                                            if (container) {
                                                container.innerHTML = htmlString;
                                            }
                                        })
                                        .catch(error =&gt; console.error('Error fetching ad HTML:', error));
