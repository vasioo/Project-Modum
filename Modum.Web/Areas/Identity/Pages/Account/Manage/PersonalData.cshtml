@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
<div class="container mt-4">
    <h3 class="mb-3">@ViewData["Title"]</h3>
    <div class="row">
        <div class="col-md-6">
            <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
            <p class="mb-4">
                <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
            </p>

            <div class="row justify-content-around">
                <form id="download-data" class="pr-2 col-12 col-md-6 mb-2" asp-page="DownloadPersonalData" method="post">
                    <button class="btn btn-success w-100" type="submit">Download</button>
                </form>

                <div class="col-12 col-md-6 mb-2">
                    <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger w-100">Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
