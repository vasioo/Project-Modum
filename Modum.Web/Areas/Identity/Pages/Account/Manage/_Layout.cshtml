@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}
@section Styles {
    <link href="@Url.Content("~/css/custom/_ManageNav.css")" rel="stylesheet" type="text/css" />
}
<div class="container">
    <div>
        <h2 class="p-4 d-flex justify-content-center align-items-center">Manage your Account Settings</h2>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <partial name="_ManageNav" />
            </div>
            <div class="col-md-9">
                    @RenderBody()
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
